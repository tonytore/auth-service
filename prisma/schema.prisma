generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  AUTHOR
  MODERATOR
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  name      String?
  avatarUrl String?  @default("https://www.gravatar.com/avatar/")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]

  @@map("users")
}

model Password_reset_tokens {
  email     String    @id
  token     String
  createdAt DateTime? @map("created_at")
}

model Session {
  id           String    @id @default(cuid())
  userId       String
  refreshToken String    @unique
  userAgent    String?
  ipAddress    String?
  revokedAt    DateTime?
  expiresAt    DateTime
  createdAt    DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}
